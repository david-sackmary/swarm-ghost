{
  "app_name": "swarm-ghost",
  "services": [
    {
      "service_name": "db",
      "components": [
        {
          "component_name": "mysql",
          "image": "mysql:5.5",
          "ports": [3306],
          "env": {
            "MYSQL_ROOT_PASSWORD": "$mysqlpassword",
            "MYSQL_DATABASE": "$mysqldatabase"
          },
          "volumes": [
            {
              "path": "/var/lib/mysql",
              "size": "2 GB"
            }
          ]
        }
      ]
    },
    {
      "service_name": "server",
      "components": [
        {
          "component_name": "ghost",
          "image": "registry.giantswarm.io/$username/swarm-ghost",
          "ports": [2368],
          "env": {
            "HOSTNAME": "$hostname",
            "CNAME": "$cname",
            "MYSQL_DATABASE": "$mysqldatabase",
            "MYSQL_USERNAME": "$mysqlusername",
            "MYSQL_PASSWORD": "$mysqlpassword",
            "MAILGUN_USERNAME": "$mailgunusername",
            "MAILGUN_APIKEY": "$mailgunapikey",
            "BACKUPS_ENABLED": "$backupsenabled",
            "S3_BUCKET": "$s3bucket",
            "AWS_ACCESS_KEY_ID": "$awskey",
            "AWS_SECRET_ACCESS_KEY": "$awssecret",
            "AWS_DEFAULT_REGION": "$awsregion",
            "PATH_DATEPATTERN": "%Y/%m"
          },
          "dependencies": [
            {
              "name": "db/mysql",
              "port": 3306,
              "alias": "mysql"
            }
          ]
        }
      ]
    },
    {
      "service_name": "cache",
      "components": [
        {
          "component_name": "varnish",
          "image": "registry.giantswarm.io/$username/ghost-varnish",
          "ports": [80],
          "dependencies": [
            {
              "name": "server/ghost",
              "port": 2368,
              "alias": "ghost"
            }
          ],
          "domains": {
            "$cname": 80
          }
        }
      ]
    }
  ]
}
